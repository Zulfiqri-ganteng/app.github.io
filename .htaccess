# ----------------------------------------------------------------------

# ðŸ”§ Aktifkan mod_rewrite

# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Jika website di subfolder (opsional), aktifkan baris ini:
    # RewriteBase /app.sewaambulaneindonesia24jam.com/

    # Jangan rewrite jika file/folder benar-benar ada (assets, js, css, dll)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Arahkan semua permintaan ke index.php
    RewriteRule ^(.*)$ index.php/$1 [L]

</IfModule>

# ----------------------------------------------------------------------

# ðŸ”’ Blokir akses ke file sensitif (.git, .env, dll)

# ----------------------------------------------------------------------

<FilesMatch "^\.">
Order allow,deny
Deny from all
</FilesMatch>

# ----------------------------------------------------------------------

# ðŸ›¡ Blokir akses langsung ke folder application & system

# ----------------------------------------------------------------------

<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_URI} ^/(application|system|vendor)/.*$
    RewriteRule ^(.*)$ - [F,L]
</IfModule>
