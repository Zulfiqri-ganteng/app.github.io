# ----------------------------------------------------------------------
# üõ° Security: Lindungi file sensitif
# ----------------------------------------------------------------------
<FilesMatch "\.(git|env|log|htaccess|ini|bak|cache)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# ----------------------------------------------------------------------
# üîß Hindari 403 Forbidden: Pastikan server bisa baca .htaccess
# ----------------------------------------------------------------------
Options -Indexes
Options +FollowSymLinks

# ----------------------------------------------------------------------
# üåê Aktifkan RewriteEngine (wajib untuk CI3)
# ----------------------------------------------------------------------
RewriteEngine On

# ----------------------------------------------------------------------
# üìç Atur Base (jika diperlukan)
# Jika website ada di subfolder, aktifkan baris berikut (opsional)
# RewriteBase /app.sewaambulaneindonesia24jam.com
# ----------------------------------------------------------------------

# ----------------------------------------------------------------------
# üö™ Redirect ke https (opsional, jika kamu punya SSL)
# ----------------------------------------------------------------------
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# ----------------------------------------------------------------------
# üß© Hilangkan index.php dari URL
# ----------------------------------------------------------------------
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [L]

# ----------------------------------------------------------------------
# üßπ Opsional: Redirect www ke non-www (atau sebaliknya)
# ----------------------------------------------------------------------
# RewriteCond %{HTTP_HOST} ^www\.app\.sewaambulaneindonesia24jam\.com$ [NC]
# RewriteRule ^(.*)$ https://app.sewaambulaneindonesia24jam.com/$1 [L,R=301]